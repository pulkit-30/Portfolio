<%- include('./components/header.ejs') %>
<section class="flex column blog">
  <img
    src="https://images.unsplash.com/photo-1580927752452-89d86da3fa0a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2370&q=80"
    class="Cover-Video"
    alt="blog-poster"
  />
  <div class="overlay"></div>
  <div class="heading-text gradient-text blog-title">Blogs</div>
  <% blogData.forEach(element => { %>
  <div class="flex s-eve blog-post">
    <div class="blog-post-img flex">
      <img src="<%= element.image %>" alt="blog-image" />
      <div class="credit"><%= element.imageCredit %></div>
    </div>
    <div class="blog-post-para flex column">
      <h1 class="gradient-text"><%= element.title %></h1>
      <br />
      <div class="labels">
        <% element.labels.forEach((label)=>{ %>
        <span><%=label%></span>
        <% }) %>
      </div>
      <div class="post-info flex s-eve">
        <span>Read Time: <%= element.readTime %> min to read</span>
        <span>Time: <%= element.time %></span>
        <span>Date: <%= element.date %></span>
      </div>
      <p><%= element.caption %></p>
      <!-- <div class="flex s-eve blog-btn">
        <a class="like"><i class="fas fa-thumbs-up"></i>0</a>
        <a class="comment"><i class="fas fa-comments"></i>0</a>
        <a class="share" data-type="/blog/<%= element._id %>"
          ><i class="fas fa-share-alt"></i
        ></a> -->
        <a href="/blog/post/<%= element._id %>" class="btn gradient-text"
          >Read more <i class="fas fa-external-link-square-alt"></i
        ></a>
      <!-- </div> -->
    </div>
  </div>
  <hr />
  <% }) %>
</section>
<%- include('./components/footer.ejs') %>
