<%- include('./components/header.ejs') %>
<br />
<section
  class="blog-image post-image"
  style="background-image: url(<%= blog.image %>)"
>
  <div class="shadow flex">
    <h1 class="gradient-text heading-text"><%= blog.title %></h1>
  </div>
</section>
<main class="flex blog-main-box" style="align-items: flex-start">
  <section class="flex sidebar column s-eve" style="align-items: flex-start">
    <h1 class="gradient-text heading-text"><%= blog.title %></h1>
    <div>Written By: <span class="gradient-text">Pulkit Gupta</span></div>
    <div>Location: India</div>
    <div>Date: <%=blog.date %></div>
    <div>Time: <%=blog.time %></div>
    <div class="">
      <h4 class="gradient-text">Share Feedback</h4>
      <form action="/blog/feedback" class="flex" method="post">
        <input
          type="text"
          value="<%= JSON.stringify(blog)%>"
          name="blog"
          style="display: none"
        />
        <br />
        <input
          name="message"
          type="text"
          placeholder="write your words..."
          required
        />
        &nbsp;
        <button class="btn gradient-text">Send</button>
      </form>
    </div>
  </section>
  <section class="blog-post">
    <p><%=blog.caption %></p>
    <hr />
    <% blog.Article.forEach(para => { %>
      <% if(para.split(':')[0] == "link"){ %> 
        <a href="<%=para.split(':')[1]%>"><%= para.split(':')[1] %></a>
      <% } else if(para.split(':')[0] == "h1"){ %>
      <h3 class="gradient-text"><%= para.split(':')[1] %></h3>
      <% }else if(para.split(':')[0] == "https"){ %> 
      <img src='<%= para %>' alt="article-image" />
    <% } else { %>
    <p><%= para %></p>
    <% } %> 
    <% }) %>
    <br />
    <hr />
    <br />
  </section>
</main>
<%- include('./components/footer.ejs') %>
