<%- include('./components/header.ejs') %>
<br />
<section
  class="blog-image post-image"
  style="background-image: url(<%= blog.image %>)"
>
  <div class="shadow flex">
    <h1 class="gradient-text heading-text"><%= blog.title %></h1>
  </div>
</section>
<section class="flex column blog-box blog-post">
  <p><%=blog.caption %></p>
  <hr />
  <% blog.Article.forEach(para => { %>
  <p><%= para %></p>
  <% }) %>
  <br />
  <hr />
  <br />
  <h3 class="heading-text gradient-text">Thank You</h3>
  <h4>By: Pulkit Gupta</h4>
  <h6><%= blog.createdAt %></h6>
</section>
<%- include('./components/footer.ejs') %>
